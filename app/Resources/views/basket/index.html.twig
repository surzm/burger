{% extends 'base.html.twig' %}

{% block body %}
    {{ include ('header/index.html.twig') }}
    <div>
        {% for basketRow in basketRows %}
            <p> {{ basketRow.products.name }}</p>
            <p> {{ basketRow.products.price }}</p>
            <p> {{ basketRow.count }} шт.</p>
            <p><a href="/delete{{ basketRow.products.id }}">Удалить</a></p>

        {% else %}
            <p>No products found</p>
        {% endfor %}
    </div>

    <p>Общая стоимость:{{ total }}</p>
    {% if basketRows %}
        <p><a href="/order">Оформить заказ</a></p>
    {% endif %}

{% endblock %}